



<div class="container ">
  <div class="panel panel-primary "> 
  <div class="panel-heading"> Create Items</div>
  <div  class="panel-body">

 <%= form_for Item.new,url: admin_add_items_path, html: {class: 'form', :multipart => true} do |f| %>

<div>
<label>Category *</label>
<%= select_tag 'Category', options_for_select(Category.all.map{|category| [category.categorytype,category.id]} )%>

</div>


  <div class="form-group"> 

    <%= f.text_field :title, :class => "form-control", placeholder: "Image-title" %>
  </div>

  <div clas="form-group">
  	<%= f.text_field :description, :class => "form-control", placeholder: "Image-description"%>
  </div>

  <div class="form-group">
    <%= f.text_field :price, :class => "form-control", placeholder: "Item-price" %> 	
  </div>

  <div>
    <%= file_field_tag 'files[]', :multiple => true %>
  </div>
  <div>
   
  </div>

</div>
<div class="panel-footer">

<%= f.submit :class => "btn btn-success" %>
 <% end %>
</div>
 </div>
</div>






















