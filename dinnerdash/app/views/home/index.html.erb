
<div class= "container well">
<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <img src="img1.jpg" alt="Chania"  class="images">
    </div>

    <div class="item">
      <img src="img2.jpg" alt="Chania" class="images">
    </div>

    <div class="item">
      <img src="img3.jpg" alt="Flower" class="images">
    </div>

    <div class="item">
      <img src="img4.jpg" alt="Flower" class="images">
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="fa fa-angle-left" aria-hidden="true" class="slide"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="fa fa-angle-right" aria-hidden="true" class="slide"></span>
    <span class="sr-only">Next</span>
  </a>
</div>




<div class="panel panel-primary">
  <!-- Default panel contents -->
  <div class="panel-heading">Items</div>


  <!-- Table -->
  <table class="table table-bordered" >
     <tr> 
       <th>Title</th>
       <th>Description</th>
       <th>Price</th>
 
     </tr>
     <% @items.each do|item| %>
       <tr>
         <td> <%= link_to item.title, itemdescription_path(:item_id => item.id) %></td>
         <td> <%= item.description %> </td>
         <td> <%= item.price %> </td>

       </tr>
     <% end %>
  </table>
</div>
</div>



