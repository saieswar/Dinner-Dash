    <div class="col-sm-12 ">
    	
    	<%= form_for @user, url: users_register_path, html: {class: 'form'}, remote: :true do|f| %>
			<h2>Please Sign Up <small>It's free and always will be.</small></h2>
			<hr class="colorgraph">
			<div class="row">
				<div class="col-xs-12 col-sm-6 col-md-6">
