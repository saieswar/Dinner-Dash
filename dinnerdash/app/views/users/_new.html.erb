<script type="text/javascript">


 
$(document).ready(function(){

$("#user_email").blur(function(){
	$.get("/users/validation.json?email="+$("#user_email").val(), function(data){
      if(data.avalable == true){
         $("#emailvalidation").text("Email Already Exists");
      }
      else{
          $("#emailvalidation").text("");
      }

	});
});


  $("#user_lastname").blur(function(){
	$.get("/users/validation.json?lastname="+$("#user_lastname").val(), function(data){
      if(data.msg == false){
         $("#result").text("should be more than 6 char");
         $('#result').parent().addClass("has-error");
      }
      else{
          $("#result").text("");
      }

	});
});




});

</script>